# udev rules для LSwitch
# Даёт группе input доступ к устройствам ввода

# uinput — виртуальная клавиатура (требуется для LSwitch)
KERNEL=="uinput", MODE="0660", GROUP="input"

# Все устройства ввода доступны группе input
KERNEL=="event*", SUBSYSTEM=="input", MODE="0660", GROUP="input"

# Альтернативно: только клавиатуры
# KERNEL=="event*", SUBSYSTEM=="input", ENV{ID_INPUT_KEYBOARD}=="1", MODE="0660", GROUP="input"
