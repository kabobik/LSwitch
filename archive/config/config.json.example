{
  "double_click_timeout": 0.3,
  "debug": true,
  "switch_layout_after_convert": true,
  "layout_switch_key": "Alt_L+Shift_L",
  "auto_switch": true,
  "auto_switch_threshold": 10,
  "user_dict_enabled": true,
  "user_dict_min_weight": 2,
  "allow_user_overrides": true,

  # App-specific policies: map active window class/name to preferred mode: "retype" or "selection"
  # Example: prefer fast retype in editors/IDEs, selection in browsers
  "app_policies": {
    "Code": "retype",
    "IntelliJ": "retype",
    "Firefox": "selection",
    "Chromium": "selection"
  }
}
